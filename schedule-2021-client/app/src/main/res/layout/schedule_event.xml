                android:text="LessonPlace1"
                app:layout_constraintStart_toStartOf="@+id/teacherName1"
                app:layout_constraintTop_toBottomOf="@+id/teacherName1" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scheduleConstraintLayout2"
