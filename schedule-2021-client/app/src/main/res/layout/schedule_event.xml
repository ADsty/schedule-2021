                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time1"
                android:layout_marginLeft="20dp"
                android:layout_marginVertical="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp" />

            <TextView
                android:id="@+id/lessonName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LessonName1"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                app:layout_constraintStart_toEndOf="@+id/lessonTime1"
                app:layout_constraintTop_toTopOf="@+id/lessonTime1" />

            <TextView
                android:id="@+id/lessonType1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LessonType1"
                app:layout_constraintStart_toStartOf="@+id/lessonName1"
                app:layout_constraintTop_toBottomOf="@+id/lessonName1" />

            <TextView
                android:id="@+id/teacherName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TeacherName1"
                app:layout_constraintStart_toStartOf="@+id/lessonType1"
                app:layout_constraintTop_toBottomOf="@+id/lessonType1" />

            <TextView
